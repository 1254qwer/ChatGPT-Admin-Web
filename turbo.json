{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "OPENAI_API_KEY",
        "LEX_COOKIE",
        "EMAIL_API_KEY",
        "EMAIL_DOMAIN",
        "TENCENT_SECRETID",
        "TENCENT_SECRETKEY",
        "SMS_ACCESS_KEY_ID",
        "REDIS_URL",
        "REDIS_TOKEN",
        "PAY_APPID",
        "PAY_APPSECRET"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
